              },
              {
                "type": "td",
                "text": "Speciality"
              },
              {
                "type": "td",
                "text": "d8"
              },
              {
                "type": "td",
                "text": "Speciality"
              }
            ]
          ]
        },
        {
          "type": "tbody",
          "rows": [
            [
              {
                "type": "td",
                "text": "1"
              },
              {
                "type": "td",
                "text": "Officer"
              },
              {
                "type": "td",
                "text": "6"
              },
              {
                "type": "td",
                "text": "Quartermaster"
              }
            ],
            [
              {
                "type": "td",
                "text": "2"
              },
              {
                "type": "td",
