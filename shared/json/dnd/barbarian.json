    {
      "header": "",
      "items": [
        {
          "name": "",
          "text": "As a Barbarian, you gain the following class features:"
        }
      ]
    },
    {
      "header": "Hit Points",
      "level": "2",
      "items": [
        {
          "name": "",
          "text": ""
        },
        {
          "name": "Hit Dice",
          "text": "1d12 per barbarian level"
        },
        {
          "name": "Hit Points at 1st Level",
          "text": "12 + your Constitution modifier"
        },
        {
          "name": "Hit Points at Higher Levels",
          "text": "1d12 (or 7) + your Constitution modifier per barbarian level after 1st"
        }
      ]
    },
    {
      "header": "Proficiencies",
      "level": "2",
      "items": [
        {
          "name": "",
          "text": ""
        },
        {
          "name": "Armor",
          "text": "Light Armor, Medium Armor, shields Weapons: Simple Weapons, martial Weapons Tools: None"
        },
        {
          "name": "Saving Throws",
          "text": "Strength, Constitution"
        },
        {
          "name": "Skills",
          "text": "Choose two from Animal Handling, Athletics, Intimidation, Nature, Perception, and Survival"
        }
      ]
    },
    {
      "header": "Equipment",
      "level": "2",
      "items": [
        {
          "name": "",
          "text": "You start with the following Equipment, in addition to the Equipment granted by your background:"
        },
        {
          "name": "",
          "text": "• (a) a Greataxe or (b) any martial melee weapon"
        },
        {
          "name": "",
          "text": "• (a) two handaxes or (b) any simple weapon"
        },
        {
          "name": "",
          "text": "• An explorer's pack and four javelins"
        }
      ]
    },
