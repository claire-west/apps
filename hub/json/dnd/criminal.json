            ],
            [
              {
                "type": "td",
                "text": "5"
              },
              {
                "type": "td",
                "text": "I turn tail and run when things look bad."
              }
            ],
            [
              {
                "type": "td",
                "text": "6"
              },
              {
                "type": "td",
                "text": "An innocent person is in prison for a crime that I committed. I'm okay with that."
              }
            ]
          ]
        }
